<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @{
            //TODO #1: Use a loop to display job results in a table.
     }

            <table class="job-listing">
                @foreach (var jobs in ViewBag.jobs)
                {
                    <tr>
                        <th>ID:</th>
                        <td>@jobs.Id</td>
                    </tr>
                    <tr>
                        <th>Name:</th>
                        <td>@jobs.Name</td>
                    </tr>
                    <tr>
                        <th>Employer:</th>
                        <td>@jobs.Employer</td>
                    </tr>
                    <tr>
                        <th>Location:</th>
                        <td>@jobs.Location</td>
                    </tr>
                    <tr>
                        <th>Position Type:</th>
                        <td>@jobs.PositionType</td>
                    </tr>
                    <tr>
                        <th>Core Competency:</th>
                        <td>@jobs.CoreCompetency</td>
                    </tr>

                }
            </table>

</div>
